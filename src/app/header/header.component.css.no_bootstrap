  background-color: #768692;
  height:100%;
  line-height: 78px;
  padding-left: 10px;
  padding-right: 10px;
}

.breadcrumb1 {
  background-color: #5e9dbc;
  height:100%;
  line-height: 78px;
  padding-left: 15px;
  padding-right: 15px;
}

.arrow1 {
  width: 0;
  height: 0;
  border-top: 39px solid #5e9dbc;
  border-bottom: 39px solid #5e9dbc;
  border-left: 20px solid #768692;
}

.arrow2 {
  width: 0;
  height: 0;
  border-top: 39px solid #5e9dbc;
  border-bottom: 39px solid #5e9dbc;
  border-right: 20px solid #031a41;
}
