  height: 78px;
  font-family: Arial,serif;
}

.image_margin{
  margin-top: 3px;
}

.user_name{
  font-size:23px;
  line-height: 1;
  margin-top:18px;
}

.user_role{
  font-size: 16px;
  line-height: 1;
  margin-top:10px;
}

.arrow0 {
  width: 0;
  height: 0;
  border-top: 39px solid #768692;
